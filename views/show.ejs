<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital@1&display=swap" rel="stylesheet">
<link href="/stylesheets/app.css" rel="stylesheet">

<%- include("partials/navbar") %>

<main class="main pt-4">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <article class="card mb-4">
                    <header class="card-header text-center">
                        <h1 class="card-title"><%= movie.name %></h1>
                    </header>
                    <img class="card-img" src="<%= movie.image %>" alt="" />
                    <div class="card-body">
                        <p>
                            <%= movie.description %> 
                        </p>
                        <hr>
                        <h3>Comments</h3>
                        <% movie.comments.forEach(function(element){ %>
                            <div class="media mb-3" style="border-radius: 10px;">
                                <div class="text-center">
                                    <h6 class="mt-1 mr-4 mb-0" style="color: black;"><strong><%= element.author.username %></strong></h6>
                                </div>
                                <div class="media-body">
                                    <p class="mt-3 mb-2" style="color: black"> <%= element.text %> </p>
                                    <p>
                                        <span class="pull-right" style="color: black" ><%= moment(element.createdAt).fromNow() %></span>
                                    </p>
                                </div>
                            </div>
                        <% }) %> 
                        <div class="mt-5">
                            <h5>Write a comment</h5>
                            <form action="/movie/<%= movie._id%>/comments" method="POST">
                                <textarea  rows="4" class="form-control mt-3" style="border-radius: 10px;" name="comment[text]" placeholder="Write a comment"></textarea>
                                <button type="submit" class="btn btn-success mt-3">Submit</button>
                            </form>
                        </div>
                    </div>
                </article>
            </div>
            <div class="col-md-3">
                <aside class="sidebar">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h4 class="card-title">
                                Posted By
                            </h4>
                            <p class="card-text">
                                <em><%= movie.author.username %> </em>
                            </p>
                        </div>
                    </div>
                </aside>
                <aside class="sidebar">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h4 class="card-title">
                                Anime Name 
                            </h4>
                            <p class="card-text">
                                <%= movie.animename %> 
                            </p>
                        </div>
                    </div>
                </aside>
                <aside class="sidebar">
                    <div class="card mb-4">
                        <div class="card-body">
                            <a class="btn btn-sm btn-success" href="/movie/<%= movie._id %>/edit">Edit Art</a>
                            <form action="/movie/<%= movie._id %>?_method=DELETE" method="POST" style="display: inline; margin-left: 20px;">
                                <button class="btn btn-sm btn-danger">Delete Art</button>
                            </form>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</main>