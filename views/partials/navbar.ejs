<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital@1&display=swap" rel="stylesheet">
<link href="/stylesheets/app.css" rel="stylesheet"> 
<header>
    <nav class="navbar navbar-expand-md navbar-light text-light absolute-top">
      <div class="container">
        <div class="collapse navbar-collapse order-3 order-md-2" id="navbar-left">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item " > 
                    <a class="nav-link" style="color: white !important ;" href="/">Home</a>
                </li> 
                <% if(currentUser) { %> 
                    <li class="nav-item ml-5">
                        <a class="nav-link" style="color: white !important ;" href="/movie/new">Add your ArtWork</a>
                    </li>
                <% } %>
            </ul>
        </div>
        <div class="navbar-brand pl-3 mx-auto order-2 order-md-3 ">
            <a class="navbar-brand pl-1 mx-auto order-2 order-md-3" style="color: white !important;" href="/movie">AnimeWorld</a>
        </div>
        <div class="collapse navbar-collapse order-4 order-md-4" id="navbar-right">
          <ul class="navbar-nav ml-auto">
            <% if(!currentUser) { %> 
                <li class="nav-item">
                    <a class="nav-link" style="color: white !important ;" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: white !important ;" href="/register">Sign-up</a>
                </li>
            <% } else { %> 
                <li class="nav-item">
                    <a class="nav-link" style="color: white !important ;" href="#"><%= currentUser.username%></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: white !important ;" href="/logout">Log-out</a>
                </li>
            <% } %> 
          </ul>
        </div>
      </div>
    </nav>
  </header>
  
<div class="container">
    <% if(error && error.length > 0){ %> 
        <div class="alert alert-danger">
            <%= error %> 
        </div>
    <% } %>
    <% if(success && success.length > 0){ %> 
        <div class="alert alert-success">
            <%= success %> 
        </div>
    <% } %>
</div>
